@using Caristocrate.Common.Models
@model PagesModel.Response
@{
    ViewData["Title"] = "Coach";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "coach-pages";

    CoursesModel.Response onsiteCoursesobj = ViewData["onsiteCoursesobj"] as CoursesModel.Response;
    CoursesModel.Response onlineCoursesobj = ViewData["onlineCoursesobj"] as CoursesModel.Response;
}

<style type="text/css">
    .coach-pages .blogBox .custBtn.active {
        background-color: #313131;
        color: #fff;
    }

    .coach-pages .blogBox .custBtn {
        width:250px;
    }
</style>

