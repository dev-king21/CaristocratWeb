                    <a href="@Url.Action("ChangePassword", "Customer")"><span class="icon-lock"></span> Change Password</a>
                </div>
                <div class="field">
                    <a href="@Url.Action("Profile", "Customer")"><span class="icon-circle-user"></span> Edit Profile <span class="icon-edit"></span></a>
                </div>
