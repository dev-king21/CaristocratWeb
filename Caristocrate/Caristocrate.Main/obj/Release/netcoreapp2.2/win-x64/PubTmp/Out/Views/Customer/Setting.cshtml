<script type="text/javascript">
    function closeDownloadBrochureModal() {
        $("#deleteAccount").find(".close").click();
    }

    function DeactivateAccount($this) {
        var data = {};
        data.status = 0

        $.ajax({
            dataType: "html",
            async: true,
            type: 'GET',
            data: data,
            url: '@Url.Action("DeactivateAccount", "Customer")',
            success: function (data) {

                if (data == "Success") {
                    notify("Your account has been deactivated", "success");
                    $("#deleteAccount").find(".close").click();
                    window.location.href = '@Url.Action("Logout", "Account")';
                }

            }, complate: function () {
                $("#deleteAccount").find(".close").click();
            }
        });
    }

    $(document).ready(function () {
        if ('@UserNotificationFlag' == 0) {
            $("#toggle").click();
        }

        $('#toggle').on('change', function () {
            var flag = 0;
            if ($(this).is(':checked')) {
                console.log("checked");
                flag = 0;
            }
            else if (!$(this).is(':checked')) {
                console.log("checked");
                flag = 1;
            }


            var data = {};
            data.flag = flag

            $.ajax({
                dataType: "html",
                async: true,
                type: 'GET',
                data: data,
                url: '@Url.Action("UpdateCustomerPushNotificationFlag", "Customer")',
                success: function (data) {
                    console.log(data);
                },
            });


        });
    });





</script>