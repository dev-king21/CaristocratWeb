}


<input type="hidden" id="hdnselectedRegions" value="@Model.Region" />
<section class="main_sec">
    <section class="page_nav">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <ul>
                        <li><a href="javascript:;">Home</a></li>
