    function GetCustNotificationCount() {
        $(".badge").hide();
        $.ajax({
            dataType: "text",
            async: true,
            type: 'GET',
            url: '@Url.Action("GetCustomerNotificationCount", "Home")',
            success: function (data) {
                if (data > 0) {
                    $(".badge").text(data);
                    $(".badge").show();
                }
            }, complete: function () { 

                
            }
        });
    }

