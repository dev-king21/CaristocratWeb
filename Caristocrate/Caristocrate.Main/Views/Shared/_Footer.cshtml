<script type="text/javascript">

    $(document).ready(function () {
        //GetFooterMenu();

        $('#footermenu').find("a").each(function () {
            $(this).text(titleCase($(this).text()));
        });

        BindAppinks();
    })

    function BindAppinks() { 

        var html = '<a href="https://itunes.apple.com/us/app/caristocrat-luxury-automotive/id1461779305?ls=1&mt=8" target="_blank" class="btn-ios"><img src="@Url.Content("~/assets/images/btn-app-store.png")" alt="" class="img-responsive" /></a>' +
            '<a href="https://play.google.com/store/apps/details?id=com.application.caristocrat" target="_blank"><img src="@Url.Content("~/assets/images/btn-android.png")" alt="" class="img-responsive" /></a>';

        $(".AppsLinkdiv").html(html);

    }

    function GetFooterMenu() {
        $('#footermenu').html('');
        $.ajax({
            dataType: "html",
            async: true,
            type: 'GET',
            url: '@Url.Action("FooterMenu", "Home")',
            type: 'GET',
            success: function (data) {
                $('#footermenu').html(data);
            }, complete: function () {
                $('#footermenu').find("a").each(function () {
                    $(this).text(titleCase($(this).text()));
                });
                BindAppinks();
            }
        });
    }
</script>